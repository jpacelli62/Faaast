<Project>
  <PropertyGroup>
    <RootNamespace>Faaast</RootNamespace>
    <Authors>Jérôme Pacelli</Authors>
    <OutputType>Library</OutputType>
    <Copyright>Jérôme Pacelli</Copyright>
    <Company />

    <!--<PackageLicenseFile>LICENSE</PackageLicenseFile>-->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <PackageProjectUrl>https://github.com/jpacelli62/Faaast</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jpacelli62/Faaast</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <LangVersion>9.0</LangVersion>
    <Version>0.0.5-alpha</Version>
    <Configurations>Debug;Release;Publish</Configurations>

    <PackageReleaseNotes>https://github.com/jpacelli62/Faaast/releasenotes#$(Version)</PackageReleaseNotes>
    <IsTestProject>$(MSBuildProjectName.Contains('Test'))</IsTestProject>
    <!--<IsPack>'$(IsTestProject)' == 'false' AND $(Configuration) != 'Debug'</IsPack>-->
    <!--<IsPublish>$(IsPack) == 'true' AND $(Configuration) == 'Publish'</IsPublish>-->
  </PropertyGroup>


  <PropertyGroup Condition="'$(IsTestProject)' == 'false' AND '$(Configuration)'!='Debug'">
    <IsPack>true</IsPack>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(IsTestProject)' != 'true' AND '$(Configuration)'=='Publish'">
    <IsPublish>true</IsPublish>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsPack)' == 'true'">
    <Optimize>true</Optimize>
    <PackageIcon>icon.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>
  <ItemGroup Condition="'$(IsPack)' == 'true'">
    
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
  
  <ItemGroup Condition="'$(IsPublish)' == 'true'">
    <PackageReference Include="SS.NuGet.Publish" Version="1.0.1912.22">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>